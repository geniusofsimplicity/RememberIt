<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:id="@+id/button_school_enter_classroom"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@color/button_background"
        android:textColor="@color/button_text"
        android:text="@string/button_enter_classroom"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_school_enter_office"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@color/button_background"
        android:textColor="@color/button_text"
        android:text="@string/button_enter_office"
        android:layout_below="@+id/button_school_enter_classroom"
        android:layout_alignLeft="@+id/button_school_enter_classroom"
        android:layout_alignStart="@+id/button_school_enter_classroom"
        android:layout_marginTop="83dp" />

</RelativeLayout>